{
  "name": "test-task-full",
  "version": "1.0.0",
  "description": "react, redux, typescript, mongoDB, express, nodeJS",
  "main": "dist/server.js",
  "scripts": {
    "start:dev": "nodemon dist/server.js",
    "build:dev": "tsc --watch --preserveWatchOutput",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm:build:dev\" \"npm:start:dev\" \"npm run client\"",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "author": "Roman Kruglyanski <eviltroll@yandex.ru>",
  "license": "MIT",
  "private": false,
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],

    "ext": "ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.3",
    "express": "^4.17.1",
    "express-validator": "^6.9.2",
    "git": "^0.1.5",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongoose": "^5.11.17",
    "multer": "^1.4.2",
    "ts-node": "^9.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/concurrently": "^5.2.1",
    "@types/config": "^0.0.38",
    "@types/express": "^4.17.11",
    "@types/express-validator": "^3.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/moment": "^2.13.0",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.31",
    "@types/nodemon": "^1.19.0",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.7",

    "typescript": "^4.1.5"
  }
}