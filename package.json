{
  "name": "test-task-full",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --inspect=5858 -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run start:watch\" \"npm run client\""
  },
  "author": "Roman Kruglyanski <eviltroll@yandex.ru>",
  "license": "MIT",
  "private": false,
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "config": "^3.3.3",
    "emoji-picker-react": "^3.4.2",
    "express": "^4.17.1",
    "express-validator": "^6.9.2",
    "git": "^0.1.5",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.17",
    "react-easy-emoji": "^1.4.0",
    "react-twemoji-picker": "github:brianhung/emojipicker"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/concurrently": "^5.2.1",
    "@types/config": "^0.0.38",
    "@types/express": "^4.17.11",
    "@types/express-validator": "^3.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^14.14.31",
    "@types/nodemon": "^1.19.0",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
